
<div class="col-md-12">
  <div class="well well-sm">

    <%= form_tag backend_chapter_path(@chapter), method: :patch do %>
      <fieldset>
        <legend class="text-center"><%= t('chapters.titles.edit_chapter') + " " + @chapter.id.to_s %></legend>

        <div class="form-group">
          <%= label_tag t('chapters.attributes.title'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= text_field_tag :title, @chapter.title, class: "form-control" %>
            <div class="small-spacer"></div>
          </div>
        </div>


        <div class="form-group">
          <%= label_tag t('chapters.attributes.description'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= text_area_tag :description, @chapter.description, class: "form-control", rows: 5 %>
            <div class="small-spacer"></div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12 text-right">
            <%= submit_tag t('chapters.buttons.submit_edit'), class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>

