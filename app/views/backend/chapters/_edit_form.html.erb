
<div class="col-md-12">
  <div class="well well-sm">

    <%= form_for @chapter, :html => {:multipart => true} , :url => backend_chapter_path(@chapter), method: :patch do |f| %>
      <fieldset>
        <legend class="text-center"><%= t('chapters.titles.edit_chapter') + " " + @chapter.id.to_s %></legend>

        <div class="form-group">
          <%= label_tag t('chapters.attributes.title'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= f.text_field :title, class: "form-control" %>
            <div class="small-spacer"></div>
          </div>
        </div>


        <div class="form-group">
          <%= label_tag t('chapters.attributes.description'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= f.text_area :description, class: "form-control", rows: 5 %>
            <div class="small-spacer"></div>
            <%= f.hidden_field :course_id, :value => @chapter.course.id %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag t('chapters.attributes.picture'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= image_tag(@chapter.picture_url, size: "120x120") if @chapter.picture? %>
            <%= f.file_field :picture, class: "form-control" %>
            <p>
              <label>
                <%= f.check_box :remove_picture %>
                Remove Picture
              </label>
            </p>
            <div class="small-spacer"></div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12 text-right">
            <%= f.submit t('chapters.buttons.submit_edit'), class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>

