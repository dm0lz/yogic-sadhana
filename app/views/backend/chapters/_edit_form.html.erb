
<h2> Update Chapter form</h2>

<div class="col-md-12">
  <div class="well well-sm">

    <%= form_tag backend_chapters_path, method: :post do %>
      <fieldset>
        <legend class="text-center">Edit Chapter <%= @chapter.id %></legend>

        <div class="form-group">
          <%= label_tag "Title", nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= text_field_tag :title, @chapter.title, class: "form-control" %>
            <div class="simple-spacer"></div>
          </div>
        </div>


        <div class="form-group">
          <%= label_tag "Description", nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= text_area_tag :description, @chapter.description, class: "form-control", rows: 5 %>
            <div class="simple-spacer"></div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12 text-right">
            <%= submit_tag "submit", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>

