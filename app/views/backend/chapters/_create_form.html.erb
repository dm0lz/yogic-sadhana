

<div class="col-md-12">
  <div class="well well-sm">

    <%= form_for @chapter, :url => backend_course_chapters_path, method: :post do |f| %>
      <fieldset>
        <legend class="text-center"><%= t('chapters.titles.create_chapter') %></legend>

        <div class="form-group">
          <%= label_tag t('chapters.attributes.title'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= f.text_field :title, class: "form-control" %>
            <div class="small-spacer"></div>
          </div>
        </div>


        <div class="form-group">
          <%= label_tag t('chapters.attributes.description'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= f.text_area :description, class: "form-control", rows: 5 %>
            <div class="small-spacer"></div>
            <%= f.hidden_field :course_id, :value => @course.id %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12 text-right">
            <%= f.submit t('chapters.buttons.submit_create'), class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>
