<h1>Backend::Chapters#index</h1>
<p>Find me in app/views/backend/chapters/index.html.erb</p>

<%#= render partial: 'create_form' %>

<%= link_to t('chapters.buttons.create_chapter'), new_backend_chapter_path, class: "btn btn-success" %>

<h1><%= t('chapters.buttons.list') %></h1>

<div class="container">
  <% @chapters.each do |chapter| %>
    <div class="row well well-sm">

      <div class="col-md-10">

        <ul>
          <li>
            <h4><%= t('chapters.attributes.title') %></h4>
            <%= chapter.title %>
          </li>
          <li>
            <h4><%= t('chapters.attributes.description') %></h4>
            <%= chapter.description %>
          </li>

        </div>

        <div class="col-md-2">
          <li>
            <%= link_to t('chapters.buttons.show_chapter'), backend_chapter_path(chapter), class: "btn btn-info" %>
          </li>
          <div class="small-spacer"></div>
          <li>
            <%= link_to t('chapters.buttons.destroy_chapter'), backend_chapter_path(chapter), method: :delete, class: "btn btn-danger" %>
          </li>
          <div class="small-spacer"></div>
          <li>
            <%= link_to t('chapters.buttons.edit_chapter'), edit_backend_chapter_path(chapter), method: :get, class: "btn btn-warning" %>
          </li>
        </ul>

        </div>

    </div>
  <% end %>
</div>
