

<div class="container">
  <% @medias.each do |media| %>
    <div class="row well well-sm">

      <div class="col-md-10">

        <ul>
          <li>
            <h4><%= t('medias.attributes.title') %></h4>
            <%= media.title %>
          </li>
          <li>
            <h4><%= t('medias.attributes.description') %></h4>
            <%= media.description %>
          </li>
          <li>
            <h4><%= t('medias.attributes.audio') %></h4>
            <%= media.audio %>
          </li>

        </div>

        <div class="col-md-2">
          <li>
            <%= link_to t('medias.buttons.show_media'), backend_media_path(media), class: "btn btn-success" %>
          </li>
          <div class="small-spacer"></div>
          <li>
            <%= link_to t('medias.buttons.edit_media'), edit_backend_media_path(media), method: :get, class: "btn btn-info" %>
          </li>
          <div class="small-spacer"></div>
          <li>
            <%= link_to t('medias.buttons.destroy_media'), backend_media_path(media), method: :delete, class: "btn btn-danger" %>
          </li>
        </ul>

        </div>

    </div>
  <% end %>
</div>
