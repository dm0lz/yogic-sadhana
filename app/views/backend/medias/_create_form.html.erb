
<div class="col-md-12">
  <div class="well well-sm">

    <%= form_for @media, :url => params[:practice_id].nil? ? backend_theory_medias_path : backend_practice_medias_path, :html => {:multipart => true} do |f| %>
      <fieldset>
        <legend class="text-center"><%= t('medias.titles.create_media') %></legend>

        <div class="form-group">
          <%= label_tag t('medias.attributes.title'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= f.text_field :title, class: "form-control" %>
            <div class="small-spacer"></div>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag t('medias.attributes.description'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= f.text_area :description, class: "form-control", rows: 5 %>
            <div class="small-spacer"></div>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag t('medias.attributes.audio'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= f.file_field :audio, class: "form-control" %>
            <div class="small-spacer"></div>
            <%#= f.hidden_field :practice_id, :value => @practice.id %>
            <%= f.hidden_field :mediumable_type, :value => params[:practice_id].nil? ? "Theory" : "Practice" %>
            <%= f.hidden_field :mediumable_id, :value => params[:practice_id].nil? ? @theory.id : @practice.id %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12 text-right">
            <%= f.submit t('medias.buttons.submit_create'), class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>

