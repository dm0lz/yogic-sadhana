

<div class="col-md-12">
  <div class="well well-sm">

    <%= form_for @theory, :url => backend_theory_path(@theory), method: :patch do |f| %>
      <fieldset>
        <legend class="text-center"><%= t('theories.titles.edit_theory') %></legend>

        <div class="form-group">
          <%= label_tag t('theories.attributes.title'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= f.text_field :title, class: "form-control" %>
            <div class="small-spacer"></div>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag t('theories.attributes.description'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= f.text_area :description, class: "form-control", rows: 5 %>
            <div class="small-spacer"></div>
            <%= f.hidden_field :chapter_id, :value => @theory.chapter.id %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12 text-right">
            <%= f.submit t('theories.buttons.submit_edit'), class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>

