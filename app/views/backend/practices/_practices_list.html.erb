
<div class="container">
  <% @practices.each do |practice| %>
    <div class="row well well-sm">

      <div class="col-md-10">

        <ul>
          <li>
            <h4><%= t('chapters.attributes.title') %></h4>
            <%= practice.title %>
          </li>
          <li>
            <h4><%= t('chapters.attributes.description') %></h4>
            <%= practice.description %>
          </li>

        </div>

        <div class="col-md-2">
          <li>
            <%#= link_to t('chapters.buttons.show_chapter'), backend_chapter_path(practice), class: "btn btn-info" %>
          </li>
          <div class="small-spacer"></div>
          <li>
            <%#= link_to t('chapters.buttons.destroy_chapter'), backend_chapter_path(practice), method: :delete, class: "btn btn-danger" %>
          </li>
          <div class="small-spacer"></div>
          <li>
            <%#= link_to t('chapters.buttons.edit_chapter'), edit_backend_chapter_path(practice), method: :get, class: "btn btn-warning" %>
          </li>
        </ul>

        </div>

    </div>
  <% end %>
</div>
