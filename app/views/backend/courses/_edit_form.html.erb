
<div class="col-md-12">
  <div class="well well-sm">

    <%= form_tag backend_course_path(@course), method: :patch do %>
      <fieldset>
        <legend class="text-center"><%= t('courses.titles.edit_course') + " " + @course.id.to_s %></legend>

        <div class="form-group">
          <%= label_tag t('courses.attributes.title'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= text_field_tag :title, @course.title, class: "form-control" %>
            <div class="small-spacer"></div>
          </div>
        </div>


        <div class="form-group">
          <%= label_tag t('courses.attributes.description'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= text_area_tag :description, @course.description, class: "form-control", rows: 5 %>
            <div class="small-spacer"></div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12 text-right">
            <%= submit_tag t('courses.buttons.submit_edit'), class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>
