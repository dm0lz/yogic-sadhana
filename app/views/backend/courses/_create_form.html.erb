

<div class="col-md-12">
  <div class="well well-sm">

    <%= form_tag backend_courses_path, method: :post do %>
      <fieldset>
        <legend class="text-center"><%= t('courses.titles.create_course') %></legend>

        <div class="form-group">
          <%= label_tag t('courses.attributes.title'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= text_field_tag :title, nil, class: "form-control" %>
            <div class="small-spacer"></div>
          </div>
        </div>


        <div class="form-group">
          <%= label_tag t('chapters.attributes.description'), nil, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= text_area_tag :description, nil, class: "form-control", rows: 5 %>
            <div class="small-spacer"></div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12 text-right">
            <%= submit_tag t('chapters.buttons.submit_create'), class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>
