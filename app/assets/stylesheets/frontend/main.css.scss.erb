@font-face {
  font-family: "Raleway";
  src: url(<%= asset_path('fonts/raleway.woff2') %>);
}

body{
  font-family: 'Raleway', sans-serif;
  a{
    color: #364150;
    &:hover{
      text-decoration: none;
    }
  }
  ul{
    li{
      list-style-type: none;
    }
  }
  -webkit-user-select: none; /* Chrome/Safari */        
  -moz-user-select: none; /* Firefox */
  -ms-user-select: none; /* IE10+ */
}

