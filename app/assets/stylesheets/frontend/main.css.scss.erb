/* Menu */
#menu {
  background-color: #364150;
  color: #bbb;
  padding-top: 51px;
  height: 100%;
  > ul {
    > li {
      > a {
        border-left: 4px solid #222;
      }
    }
  }
  a{
    color: #b4bcc8;
  }
  ul{
    background-color: #364150;
    list-style: none;
    padding: 0;
    a{
      &:hover, &:active{
        background-color: #111;
        border-left-color: #FF2F2F;
        color: #F1F3FA;
      }
      i{
        margin-right: 10px;
        font-size: 18px;
        margin-top: 3px;
        width: 20px;
        &[class*='fa-caret']{
          float: right;
        }
      }
    }
    li{
      border-bottom: 1px solid #2a2a2a;
      a{
        color: inherit;
        font-size: 1.2em;
        display: block;
        padding: 8px 0 8px 7px;
        text-decoration: none;
      }
      ul{
        font-size: 0.9em;
        margin-top: 0;
        li{
          border-bottom: none;
          a{
            padding-left: 30px;
            &:hover{
              background-color: #1A1A1A;
            }
          }
        }
      }
    }
  }
}








